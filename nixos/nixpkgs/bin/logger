#!/usr/bin/env bash

if [ $# -lt 2 ]; then
	echo "Use: $0 <app> <message>"
	exit 1
fi

TIMESTAMP=$(date +"[%Y-%m-%d %H:%M]")

# Obtiene el nombre de la aplicaciÃ³n y el mensaje
APP="$1"
MESSAGE="$2"
LOG_FILE="$HOME/.config/$APP.log"

mkdir -p "$(dirname "$log_file")"

echo "$TIMESTAMP [$APP] - $MESSAGE" >>"$LOG_FILE"
