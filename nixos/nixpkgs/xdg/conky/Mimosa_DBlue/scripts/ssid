#!/usr/bin/env bash

# A simple script to display wifi name
# 'ssid -i' = with icon, 'ssid' = text only
# Cheers!
# Addy

SSID_NAME=$(nmcli -t -f name,device connection show --active | grep wlp1s0 | cut -d\: -f1)

if [[ "${SSID_NAME}" != "" ]]; then
	if [[ $1 = "-i" ]]; then
		echo "ï‡«  ${SSID_NAME}" | cut -c 1-12
	else
		echo "${SSID_NAME}" | cut -c 1-12
	fi
else
	echo "Not Connected"
fi

exit
